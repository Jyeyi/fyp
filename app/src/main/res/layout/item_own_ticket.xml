<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_border_blue"
    android:padding="10dp"
    android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="989891"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:text="Cepat Express"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"

                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_ticket_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:text="2.30 PM 12/1/2022"
                android:fontFamily="@font/poppins_regular"

                android:textColor="@color/black"
                android:textSize="14dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ticket_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:text="@string/from_location"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"

                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_ticket_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:text="@string/to_location"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14dp"/>
        </RelativeLayout>

</LinearLayout>